---
layout: layout-container
showHeadings: true
sidebarLayoutSecondaryColumn: <%= stache.config.sidebarLayoutSecondaryColumn %>
sidebarLayoutPrimaryColumn: <%= stache.config.sidebarLayoutPrimaryColumn %>
---

<div class="row">
  <div class="{{ sidebarLayoutSecondaryColumn }} content-secondary">
    <div class="sidebar">
      {{# minify collapseWhitespace=true removeEmptyElements=true }}
        {{# if sidebar_title }}
          <h3>{{ sidebar_title }}</h3>
        {{/ if }}

        {{# withNavLinks }}

          {{# isActiveNav dest=../page.dest }}
            <ul class="nav nav-stacked nav-sidebar">

              {{# if showTitle }}
                <li class="title {{# if draft }}draft{{/ if }}">
                  <a href="{{ uri }}">
                    {{ name }}
                  </a>
                </li>
              {{/ if}}

              {{ include 'partial-sidebar' this sidebarCurrentDepth="0" sidebarParentDepth=../../sidebarParentDepth dest=../../page.dest showHeadings=../../../showHeadings page=../../../pagination.index.page }}

              <li class="visible-on-affix">
                <a href="#top" class="smooth-scroll">
                  <i class="fa fa-caret-square-o-up"></i>
                </a>
              </li>

            </ul>
          {{/ isActiveNav }}
        {{/ withNavLinks }}
      {{/ minify }}
    </div>
  </div>
  <div class="{{ sidebarLayoutPrimaryColumn }} content-primary">
    {{# inherit stache.config.markdown markdown }}
      {{# markdown }}{{ body }}{{/ markdown }}
    {{ else }}
      {{# withNewline }}{{ body }}{{/ withNewline }}
    {{/ inherit }}
    {{# inherit stache.config.comments comments }}
      {{ include 'partial-disqus' }}
    {{/ inherit }}
  </div>
</div>
